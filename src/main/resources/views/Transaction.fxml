<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.Transaction">

    <!-- EchangeProduit Section -->
    <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
        <Label text=" Transactions Receieved " />
        <TableView fx:id="serviceOutTableView" prefWidth="760.0" prefHeight="250.0">
            <columns>
                <TableColumn text="ID" prefWidth="50">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="serviceInColumn2" text="serviceIn" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="serviceIn" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="serviceOutColumn2" text="serviceOut" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="serviceOut" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Date Echange" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateEchange" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Valide" prefWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="valide" />
                    </cellValueFactory>
                </TableColumn>
                <!-- Add buttons for actions here -->
            </columns>
        </TableView>

    </VBox>

    <!-- EchangeService Section -->
    <VBox layoutX="20.0" layoutY="300.0" spacing="10.0">
        <Label text=" Transactions Made" />
        <TableView fx:id="serviceInTableView" prefWidth="760.0" prefHeight="250.0">
            <columns>
                <TableColumn text="ID" prefWidth="50">
                    <cellValueFactory>
                        <PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="serviceInColumn1" text="serviceIn" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="serviceIn" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="serviceOutColumn1" text="serviceOut" prefWidth="150">
                    <cellValueFactory>
                        <PropertyValueFactory property="serviceOut" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Date Echange" prefWidth="200">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateEchange" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Valide" prefWidth="100">
                    <cellValueFactory>
                        <PropertyValueFactory property="valide" />
                    </cellValueFactory>
                </TableColumn>
                <!-- Add buttons for actions here -->
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
