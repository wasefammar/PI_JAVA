<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="697.0" prefWidth="1117.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Echange.AfficheEchangeProduit">
    <children>
        <HBox prefHeight="110.0" prefWidth="1117.0" style="-fx-background-color: #354230;">
            <children>
                <Label fx:id="menu" onMouseClicked="#onmenuclicked" text="MENU" textFill="#4fe135">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" top="50.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="menuclose" onMouseClicked="#onmenuclickedclose" text="ME..." textFill="#6cee38">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="-50.0" top="50.0" />
                    </HBox.margin>
                </Label>
                <ImageView fitHeight="96.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                    <image>
                        <Image url="@../image/565422.png" />
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" onAction="#home" style="-fx-background-color: #354230;" text="Produit" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="80.0" top="50.0 " />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#evenement" style="-fx-background-color: #354230;" text="Evenements" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="40.0" top="50.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#activite" style="-fx-background-color: #354230;" text="Activités" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="40.0" top="50.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#reclamation" style="-fx-background-color: #354230;" text="Réclamations" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="40.0" top="50.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#channel" style="-fx-background-color: #354230;" text="Channel" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="40.0" top="50.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="exchangeTableView" layoutX="50.0" layoutY="150.0" prefHeight="450.0" prefWidth="1017.0">
            <columns>
                <TableColumn fx:id="productIn" prefWidth="200.0" text="Product In" />
                <TableColumn fx:id="productOut" prefWidth="200.0" text="Product Out" />
                <TableColumn fx:id="dateEchange" prefWidth="160.0" text="Date Echange" />
                <TableColumn fx:id="valide" prefWidth="80.0" text="Valide" />
            </columns>
        </TableView>
        <Button fx:id="idUpdateExchange" layoutX="190.0" layoutY="620.0" mnemonicParsing="false" onAction="#updateExchange" prefHeight="31.0" prefWidth="120.0" text="Update" />
        <Button fx:id="idDeleteExchange" layoutX="330.0" layoutY="620.0" mnemonicParsing="false" onAction="#deleteExchange" prefHeight="31.0" prefWidth="120.0" text="Delete" />
        <Button layoutX="470.0" layoutY="620.0" mnemonicParsing="false" onAction="#Retour" prefHeight="31.0" prefWidth="186.0" text="Consult Category List" />
    </children>
</AnchorPane>
